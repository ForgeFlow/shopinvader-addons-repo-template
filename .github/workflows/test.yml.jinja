name: test Odoo addons

on:
  pull_request:
  push:
    branches:
      - "{{ odoo_version }}*"

{%
set IMAGES = {
  "14.0": "ghcr.io/sbidoul/oca-ci/py3.6-odoo14.0:latest",
  "13.0": "ghcr.io/sbidoul/oca-ci/py3.6-odoo13.0:latest",
  "12.0": "ghcr.io/sbidoul/oca-ci/py3.6-odoo12.0:latest",
  "11.0": "ghcr.io/sbidoul/oca-ci/py3.5-odoo11.0:latest",
  "10.0": "ghcr.io/sbidoul/oca-ci/py2.7-odoo10.0:latest",
}
-%}
jobs:
  test:
    runs-on: ubuntu-latest
    container: {{ IMAGES[odoo_version] }}
    services:
      postgres:
        image: postgres:9.6
        env:
          POSTGRES_USER: odoo
          POSTGRES_PASSWORD: odoo
          POSTGRES_DB: odoo
        ports:
          - 5432:5432
    env:
      PIP_EXTRA_INDEX_URL: "https://wheelhouse.shopinvader.com/simple/"
    steps:
      - uses: actions/checkout@v2
      - run: oca_install_addons
      - run: oca_init_test_database
      - run: oca_run_tests
      - uses: codecov/codecov-action@v1
      - run: oca_export_and_push_pot
        if: >
          {{ "${{" }}
            github.event_name == 'push'
            && github.repository_owner == 'shopinvader'
            && startsWith(github.ref, 'refs/heads/{{ odoo_version }}')
          {{ "}}" }}
